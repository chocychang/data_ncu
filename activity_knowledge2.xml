<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf5c7"
    tools:context="com.edu.ncu.drawlandmark.GuessDialogActivity">


    <TextView
        android:id="@+id/textView7"
        style="@style/AppTheme"
        android:layout_width="114dp"
        android:layout_height="47dp"
        android:autoText="true"
        android:text="小知識"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/keyVisionBlue"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="33dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="66dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/ic_lock_silent_mode_off"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="33dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="316dp"
        android:layout_height="532dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="188dp"
        android:layout_height="39dp"
        android:text="國立故宮博物院"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="102dp" />

    <EditText
        android:id="@+id/editText2"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="258dp"
        android:layout_height="234dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="國立故宮博物院典藏華夏文物菁華，浩瀚豐富，守護人類文化史、藝術史的瑰寶。至2016年底國立故宮博物院已邁入開館91週年，享譽世界四大博物館之一。本院藏品以中華文物為主，藏品多精華，遂有為中華文化寶庫之譽。"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="367dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="228dp"
        android:layout_height="151dp"
        android:src="@drawable/Taipei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:src="@drawable/dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="319dp" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="24dp"
        android:layout_height="14dp"
        android:src="@drawable/dot_blue"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="336dp" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="45dp"
        android:layout_height="39dp"
        android:src="@drawable/next"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="224dp" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:src="@drawable/back"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="225dp" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="60dp"
        android:layout_height="29dp"
        android:src="@drawable/dot_two"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:allowUndo="false"
        android:background="@color/keyVisionOrange"
        android:text="作品集"
        android:textColor="@color/button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713" />

    <Button
        android:id="@+id/button10"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:allowUndo="false"
        android:background="@color/colorPrimaryDark"
        android:text="猜猜樂"
        android:textColor="@color/button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589" />

    <Button
        android:id="@+id/button9"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:allowUndo="false"
        android:background="#73cbaa"
        android:text="畫圖趣"
        android:textColor="@color/button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="282dp" />

</android.support.constraint.ConstraintLayout>